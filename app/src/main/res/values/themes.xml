<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RestaurantProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RestaurantProject" parent="Base.Theme.RestaurantProject" />


    <style name="TitleTextViewStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="ElevatedButtonStyle" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ButtonShape</item>
        <item name="android:elevation">6dp</item>
        <item name="android:translationZ">3dp</item>
        <item name="backgroundTint">#FF9800</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ElevatedButtonStyleReg" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ButtonShape</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">#F6F6F6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ButtonShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ButtonShapeDe" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TransparentIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>


    <style name="shadowText">
        <item name="android:shadowColor">#55000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_sheet_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_sheet_dialog</item>
    </style>



</resources>