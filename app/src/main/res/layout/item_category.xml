<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryItem"
    android:layout_width="90dp"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:elevation="1dp"
    android:layout_marginVertical="2dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/category_selector">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/categoryIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="17dp"
            android:src="@drawable/drinks" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/categoryNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Burger"
        android:textColor="@drawable/category_text_selector"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardIv" />

</androidx.constraintlayout.widget.ConstraintLayout>